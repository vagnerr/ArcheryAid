<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/endArrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="X"
        android:background="@drawable/end_arrow_back"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/endArrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="10"
        android:background="@drawable/end_arrow_back"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/endArrow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="9"
        android:background="@drawable/end_arrow_back"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/endArrow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="8"
        android:background="@drawable/end_arrow_back"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/endArrow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="7"
        android:background="@drawable/end_arrow_back"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/endArrow6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="M"
        android:background="@drawable/end_arrow_back"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/endTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="44"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/endRunTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="102"
        android:textAlignment="textEnd" />
</LinearLayout>


